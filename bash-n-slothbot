# very simple bot to demonstrate the bash-n-client library

source bash-n-client

calculate_move()
{
    sleep 0.3
}

record_move()
{
    :
}

game_start()
{
    :
}

game_end()
{
    echo "$@"
}

start_client bash-n-slothbot
