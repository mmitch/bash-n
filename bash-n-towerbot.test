run_bot()
{
    ./bash-n-towerbot 2>/dev/null
}

############################

test_single_fake_game_does_not_fail()
{
    run_bot <<EOF
NEW SEASON;abcdef
NEW GAME;OTHER-NAME
YOURTURN;1234
TOKEN INSERTED;simplebot;4
TOKEN INSERTED;OTHER-NAME;4
YOURTURN;1235
TOKEN INSERTED;simplebot;1
TOKEN INSERTED;OTHER-NAME;1
YOURTURN;1236
TOKEN INSERTED;simplebot;2
TOKEN INSERTED;OTHER-NAME;2
YOURTURN;1237
TOKEN INSERTED;simplebot;3
RESULT;LOST;OTHER-NAME;column out of range
EOF
}

test_multiple_fake_games_do_not_fail()
{
    run_bot <<EOF
NEW SEASON;abcdef
NEW GAME;OTHER-NAME
YOURTURN;1234
TOKEN INSERTED;simplebot;4
TOKEN INSERTED;OTHER-NAME;4
YOURTURN;1235
TOKEN INSERTED;simplebot;4
TOKEN INSERTED;OTHER-NAME;4
YOURTURN;1236
TOKEN INSERTED;simplebot;4
TOKEN INSERTED;OTHER-NAME;4
YOURTURN;1237
TOKEN INSERTED;simplebot;4
RESULT;LOST;OTHER-NAME;column is already full
NEW GAME;OTHER-NAME
TOKEN INSERTED;OTHER-NAME;7
YOURTURN;2234
TOKEN INSERTED;simplebot;4
TOKEN INSERTED;OTHER-NAME;4
YOURTURN;2235
TOKEN INSERTED;simplebot;6
TOKEN INSERTED;OTHER-NAME;7
YOURTURN;2236
TOKEN INSERTED;simplebot;1
TOKEN INSERTED;OTHER-NAME;3
YOURTURN;2237
TOKEN INSERTED;simplebot;2
TOKEN INSERTED;OTHER-NAME;2
YOURTURN;2238
RESULT;DRAW;OTHER-NAME;no winner
EOF
}

############################

source bash-tests
