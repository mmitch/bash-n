run_bot()
{
    ./bash-n-slothbot 2>/dev/null
}

############################

test_single_fake_game_does_not_fail()
{
    run_bot <<EOF
NEW SEASON;abcdef
NEW GAME;OTHER-NAME
YOURTURN;1234
RESULT;LOST;slothbot;timeout
EOF
}

test_multiple_fake_games_do_not_fail()
{
    run_bot <<EOF
NEW SEASON;abcdef
NEW GAME;OTHER-NAME
YOURTURN;1234
RESULT;LOST;slothbot;timeout
NEW GAME;OTHER-NAME
TOKEN INSERTED;OTHER-NAME;7
YOURTURN;2234
RESULT;LOST;slothbot;timeout
EOF
}

############################

source bash-tests
